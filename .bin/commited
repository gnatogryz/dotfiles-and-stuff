#!/usr/bin/env ruby

arg, *scope = ARGV
arg ||= 'fix'
scope = "(#{scope.join(' ')})" if scope.length > 0
arg = [arg, scope].join('')
arg += ': ' if arg.length > 0

res = `zenity --title='Commit' --entry --text='Enter a commit message' --width=500`.strip
return if (res.length == 0)

run = %Q(git commit -am #{(arg+res).dump})
puts " â†’ #{run}"
system run
